<%  include ../partials/header %>
<div class="container">
    <div class="row"></div>
        <h1 style = "text-align:center">Add a new comment to <%= place.name %></h1>
        <div style ="width:30%; margin: 25px auto" >
        <form action="/places/<%= place.id %>/comments" method="POST">
            <div class="form-group">
            <input class = "form-control" type="text" placeholder="comment" name = "comment[text]">
            </div>
            <div class="form-group">
            <button class = "btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/places">Go Back</a>
        </div>
    </div>
</div>
<%  include ../partials/footer %>
