<%  include ../partials/header %>
<div class="container">
    <div class="row"></div>
        <h1 style = "text-align:center">Create a new place</h1>
        <div style ="width:30%; margin: 25px auto" >
        <form action="/places" method="POST">
            <div class="form-group">
            <input class = "form-control" type="text" placeholder="name" name = "name">
            </div>
            <div class="form-group">
            <input class = "form-control" type="number" placeholder="danger level" name = "dangerLevel" min="0.0" step="0.1">
            </div>
            <div class="form-group">
            <input class = "form-control" type="text" placeholder="image url" name = "image">
            </div>
            <div class="form-group">
            <input class = "form-control" type="text" placeholder="description" name = "description">
            </div>
            <div class="form-group">
            <input class = "form-control" type="text" placeholder="related wikipedia website" name = "wiki">
            </div>
            <div class="form-group">
            <button class = "btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/places">Go Back</a>
        </div>
    </div>
</div>
<%  include ../partials/footer %>
