<%  include ../partials/header %>


<div class="container">
      <header class = "jumbotron">
          <div class="container">
              <h1>Welcome to Ancient Greece!</h1>
              <h4>View our hand-picked destinations from The Odyssey and authentic comments from travelers!</h4>
              <p style="margin-top: 20px;">
                  <a href="/places/new" class = "btn btn-primary btn-lg">Add New Places</a>
              </p>
          </div>
      </header>
    <%# <div class="row">
        <div class-"col-lg-12">
            <h3 style="padding-left: 15px;">Our Most Popular National Parks</h3>
        </div>
    </div> %>

    <div class="text-center" style="display:flex;flex-wrap:wrap">
        <% places.forEach(function(place){ %>
        <div class="col-md-4 col-sm-6">
          <div class="img-thumbnail">
                <img class="img-fluid" src="<%= place.image %>">
                <div class="caption"><h4><%= place.name %></h4></div>
                <p><a href="/places/<%= place._id %>" class="btn btn-primary">More Info</a></p>
                </div>
        </div>
        <% }) %>
    </div>


</div>
<%  include ../partials/footer %>
